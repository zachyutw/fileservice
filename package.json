{
    "name": "fileservice",
    "version": "1.1.1",
    "description": "node file service",
    "main": "index.js",
    "scripts": {
        "build": "tsc --project ./ && cp ./index.html ./serve/",
        "start": "node ./serve/index.js",
        "dev": "nodemon index.ts",
        "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
        "heroku-deploy": "git push heroku master",
        "heroku-confirm": "heroku ps:scale web=1",
        "heroku-open": "heroku open",
        "heroku-local-web": "heroku local web",
        "heroku-local": "heroku local",
        "heroku-run-bash": "heroku run bash"
    },
    "keywords": [
        "node",
        "express",
        "file_service"
    ],
    "author": {
        "name": "Zach Yu",
        "email": "zachyu.tw@gmail.com"
    },
    "heroku": {
        "url": "https://files-service.herokuapp.com"
    },
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jimp": "^0.16.1",
        "mkdirp": "^1.0.4",
        "multer": "^1.4.2",
        "multer-sharp-resizer": "^1.0.4",
        "sharp": "^0.27.0",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.9",
        "@types/jimp": "^0.2.28",
        "@types/mkdirp": "^1.0.1",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.16",
        "@types/sharp": "^0.26.1",
        "cross-env": "^7.0.3",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "supertest": "^6.0.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    }
}
